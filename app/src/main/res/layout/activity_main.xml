<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name    : "
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <EditText
        android:id="@+id/input_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/user_name"
        android:layout_alignTop="@+id/user_name"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView android:id="@+id/user_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: "
        android:layout_below="@+id/user_name"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <EditText
        android:id="@+id/input_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/user_address"
        android:layout_alignTop="@+id/user_address"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView android:id="@+id/pass_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration: "
        android:layout_below="@+id/user_address"
        android:layout_marginTop="80dp"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <Spinner android:id="@+id/sp_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/duration_arrays"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/pass_duration"
        android:layout_alignTop="@+id/pass_duration"></Spinner>

    <TextView android:id="@+id/pass_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pass Type: "
        android:layout_below="@+id/pass_duration"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <Spinner android:id="@+id/sp_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/type_arrays"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/pass_type"
        android:layout_alignTop="@+id/pass_type"></Spinner>

    <TextView android:id="@+id/pass_from_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From Date: "
        android:layout_below="@+id/pass_type"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <EditText
        android:id="@+id/etxt_fromdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/pass_from_date"
        android:layout_alignTop="@+id/pass_from_date"/>


    <!--    <TextView android:text="@string/user_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@string/user_name"/>-->

</RelativeLayout>
